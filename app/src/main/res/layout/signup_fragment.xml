<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textDirection="rtl">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_img_header"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/ic_person_with_book"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:orientation="vertical"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_ed_profile"
                android:hint="شماره موبایل"
                android:paddingTop="@dimen/_4sdp"
                android:textColorHint="#BDBDBD"
                app:boxBackgroundMode="none"
                app:hintTextAppearance="@style/textInputLayoutTextLabel"
                app:hintTextColor="#BDBDBD">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPhoneNumber"
                    style="@style/editProfileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="30" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_ed_profile"
                android:hint="رمزعبور"
                android:paddingTop="@dimen/_4sdp"
                android:textColorHint="#BDBDBD"
                app:boxBackgroundMode="none"
                app:hintTextAppearance="@style/textInputLayoutTextLabel"
                app:hintTextColor="#BDBDBD">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPassword"
                    style="@style/editProfileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:maxLength="30" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/bg_btn_login"
            android:text="@string/signup"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="@string/login"
            android:textColor="@color/green_500"
            android:textSize="@dimen/_11ssp" />


    </LinearLayout>

</layout>
